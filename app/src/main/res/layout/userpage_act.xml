<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserpageActivity">

    <EditText
        android:id="@+id/edittxt_additem"
        android:layout_width="200dp"
        android:layout_marginStart="20dp"
        android:hint="Add Item"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"

        />

    <ImageButton
        android:id="@+id/previtembut"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingHorizontal="10dp"
        android:layout_toRightOf="@id/additembut"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_prev_item"
        android:background="#000000"
        android:layout_marginStart="20dp"
        />

    <ImageButton
        android:id="@+id/additembut"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_toRightOf="@id/edittxt_additem"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:paddingHorizontal="10dp"
        android:src="@drawable/ic_add_item" />

    <FrameLayout
    android:id="@+id/user_framelay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    />

</RelativeLayout>